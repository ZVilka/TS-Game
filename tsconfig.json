{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "noEmitOnError": true,
    "strictNullChecks": false,
    "allowJs": true
  },
  "include": [
    "./src/*"
  ]
}